# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
API_VERSION=v1

# ========================================
# AZURE DEVOPS
# ========================================
AZURE_DEVOPS_ORG_URL=https://dev.azure.com/your-organization
AZURE_DEVOPS_PAT=your-personal-access-token-here
AZURE_DEVOPS_PROJECT=your-default-project-name

# ========================================
# SUPABASE (PostgreSQL)
# ========================================
SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
DATABASE_URL=postgresql://postgres.xxxxxxxxxxxxx:[YOUR-PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true
DIRECT_DATABASE_URL=postgresql://postgres.xxxxxxxxxxxxx:[YOUR-PASSWORD]@aws-0-us-east-1.pooler.supabase.com:5432/postgres

# ========================================
# REDIS CACHE
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=azurebridge:

# ========================================
# SECURITY
# ========================================
API_KEY=your-secure-api-key-here
JWT_SECRET=your-jwt-secret-key-here
CORS_ORIGIN=http://localhost:5173

# ========================================
# FEATURES FLAGS
# ========================================
FEATURE_ANALYTICS=true
FEATURE_REPORTS=true
FEATURE_WIKI=true
FEATURE_AUTO_SYNC=true
FEATURE_ALERTS=true

# ========================================
# SYNC & JOBS
# ========================================
SYNC_INTERVAL_HOURS=1
SNAPSHOT_INTERVAL_HOURS=4
REPORT_AUTO_GENERATE=true

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_PRETTY=true
LOG_FILE_ENABLED=false
LOG_FILE_PATH=logs/app.log

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=15m
