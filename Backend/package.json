{
  "name": "azurebridge-api",
  "version": "2.0.0",
  "description": "AzureBridge API - Azure DevOps Dashboard & Reports",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "worker": "tsx src/worker.ts",
    "worker:prod": "node dist/worker.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "tsx src/database/seeds/index.ts",
    "db:studio": "prisma studio",
    "db:reset": "tsx scripts/reset-db.ts && npm run db:seed",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "sync:smart": "tsx scripts/sync/smart-sync.ts",
    "sync:wiki": "tsx scripts/sync/wiki-sync.ts",
    "sync:hourly": "tsx scripts/hourly-sync.ts",
    "sync:daily": "tsx scripts/daily-sync.ts",
    "sync:full": "tsx scripts/full-sync.ts"
  },
  "keywords": [
    "azure-devops",
    "dashboard",
    "reports",
    "analytics",
    "sprint-management"
  ],
  "author": "Clodoaldo Melo",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.3.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/static": "^7.0.1",
    "@prisma/client": "^5.9.1",
    "@supabase/supabase-js": "^2.39.3",
    "azure-devops-node-api": "^12.5.0",
    "bullmq": "^5.67.3",
    "date-fns": "^3.3.1",
    "docxtemplater": "^3.68.1",
    "dotenv": "^16.4.1",
    "fast-xml-parser": "^5.3.6",
    "fastify": "^4.26.0",
    "ioredis": "^5.3.2",
    "joi": "^17.12.1",
    "mammoth": "^1.11.0",
    "openai": "^6.22.0",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.14.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "pizzip": "^3.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/pdf-parse": "^1.1.5",
    "@types/pdfkit": "^0.13.4",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "prisma": "^5.9.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
